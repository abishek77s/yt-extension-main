{
  "manifest_version": 3,
  "name": "YouTube Studio Enhancer",
  "version": "1.0.0",
  "description": "Enhance your YouTube Studio experience with AI-powered content generation",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://studio.youtube.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_title": "YT Studio Enhancer"
  },
  "content_scripts": [
    {
      "matches": ["*://studio.youtube.com/*"],
      "css": ["styles.css"],
      "js": [
        "constants.js",
        "utils.js",
        "contentGenerator.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}